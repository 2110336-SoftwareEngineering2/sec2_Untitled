{{#> default title="Profile"}}
<div class="card mx-5 my-5 shadow" style= "background: white; border-radius: 50px;">
        <article class="card-body p-5">
            <h4 class="card-title mb-4 mt-1">Profile</h4>

                 <div class="form-group row">
                <label for="username" class="col-sm-2 col-form-label">Username</label>
                <div class="col-sm-10">
                    <input name="username" readonly class="form-control-plaintext" placeholder="Pet Owner Username"
                        type="text" id="username" value={{account.username}}>
                </div>
            </div>

            <div class="form-group row">
                <label for="fname" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    <input name="fname" readonly class="form-control-plaintext" placeholder="First Name" type="text"
                        id="fname" value={{account.fname}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="lname" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    <input name="lname" readonly class="form-control-plaintext" placeholder="Last Name" type="text"
                        id="lname" value={{account.lname}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="lname" class="col-sm-2 col-form-label">Rating</label>
                <div class="col-sm-10">
                    <input name="rating" readonly class="form-control-plaintext" placeholder="Rating" type="text"
                        id="rating" value={{account.rating}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="gender" class="col-sm-2 col-form-label">Gender</label>
                <div class="col-sm-10">
                    {{#if (eq account.gender "M")}}
                    <input name="gender" readonly class="form-control-plaintext" placeholder="Gender" type="text"
                        id="gender" value="Male">
                    {{else if (eq account.gender "F")}}
                    <input name="gender" readonly class="form-control-plaintext" placeholder="Gender" type="text"
                        id="gender" value="Female">
                    {{else}}
                    <input name="gender" readonly class="form-control-plaintext" placeholder="Gender" type="text"
                        id="gender" value="Unidentified">
                    {{/if}}
                </div>
            </div>
            {{#if (gte account.id 2000000)}}
            <div class="form-group row">
                <label for="priceRate" class="col-sm-2 col-form-label">Price Rate</label>
                <div class="col-sm-10">
                    <input name="priceRate" readonly class="form-control-plaintext" placeholder="Price Rate" type="text"
                        id="priceRate" value="{{account.priceRate}}$ / day">
                </div>
            </div>
            <div class="form-group row">
                <label for="locationName" class="col-sm-2 col-form-label">Location Name</label>
                <div class="col-sm-10">
                    <input name="locationName" readonly class="form-control-plaintext" placeholder="Location Name" type="text"
                        id="locationName" value={{account.locationName}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="location" class="col-sm-2 col-form-label">Address</label>
                <div class="col-sm-10">
                    <input name="location" readonly class="form-control-plaintext" placeholder="Address" type="text"
                        id="address" value={{account.location}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="bank" class="col-sm-2 col-form-label">Bank Name</label>
                <div class="col-sm-10">
                    <input name="bank" readonly class="form-control-plaintext" placeholder="Bank Name" type="text"
                        id="bank" value={{account.bank}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="bankAccount" class="col-sm-2 col-form-label">Bank Account</label>
                <div class="col-sm-10">
                    <input name="bankAccount" readonly class="form-control-plaintext" placeholder="Bank Account" type="text"
                        id="bankAccount" value={{account.bankAccount}}>
                </div>
            </div>
            <div class="form-group row">
                <label for="balance" class="col-sm-2 col-form-label">Account Balance</label>
                <div class="col-sm-10">
                    <input name="balance" readonly class="form-control-plaintext" placeholder="Bank Account" type="text"
                        id="balance" value={{account.balance}}>
                </div>
            </div>
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-dark btn-block mt-4 rounded-pill" data-toggle="modal" data-target="#withdraw">Withdraw Money</button>

            <!-- Modal -->
            <div class="modal fade" id="withdraw" tabindex="-1" aria-labelledby="withdrawLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content" style= " border-radius: 30px;">
                        <div class="modal-header">
                            <h5 class="modal-title" id="withdrawLabel">Withdraw</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="amount">Amount</label>
                                <input type="number" class="form-control rounded-pill" id="amount" name="amount"placeholder={{account.balance}}>
                                <button id="withdraw-btn" class="btn btn-dark  mt-3 rounded-pill">Confirm</button>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary rounded-pill" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>

            {{else}}
            <div class="form-group row">
                <label for="pet" class="col-sm-2 col-form-label">Pet</label>
                <div class="d-flex flex-wrap" style="width:900px">
                    {{#if pet.length}}
                    {{#each pet}}
                        
                        <div class=" mr-3 mb-3 py-2 px-3 bg-experince rounded-pill align-self-center shadow" style="background-color:lightgray">
                            
                            <div class="align-self-center text-center"><img style="width:30px; height:30px"src="/image/icons/{{type}}.png"> <strong>{{type}}</strong> {{name}} 
                            </div>
                            {{!-- <span class="fas fa-heart text-muted mr-2" ></span>
                             --}}
                           
                        </div>
                
                    
                    {{/each}}
                    {{else}}
                    <input name="pet" readonly class="form-control-plaintext" placeholder="Pet" type="text"
                        id="pet" value="No Pet">
                    {{/if}}
                </div>
            </div>
            <button type="button" class="btn btn-dark btn-block mt-4 rounded-pill" onclick="addPet()">Add Pet</button>
            {{/if}}

            </form>
            <button class="btn btn-dark btn-block mt-4 rounded-pill" onclick="editProfile()"> Edit Profile </button>

            

        </article>
    </div>
<script src="/javascripts/profile.js"></script>
{{/default}}