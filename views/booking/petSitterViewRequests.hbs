    <script>
        dayjs.extend(window.dayjs_plugin_customParseFormat)

        const ACTION = {
            ACCEPT: "ACCEPT",
            DENY: "DENY"
        }

        $("button[name='accept_booking'").on('click', function(){ takeAction(ACTION.ACCEPT, this) })
        $("button[name='deny_booking'").on('click', function(){ takeAction(ACTION.DENY, this) })

        function takeAction(action, btn){
            let div_parent = $(btn).closest("div[name='booking_request'")
            let bid = div_parent.attr("booking_id")
            $.ajax({
                url: "/book",
                method: "PATCH",
                data: {
                    booking_id: bid,
                    action: action
                }
            }).done(function(data){
                if(data.status) div_parent.fadeOut()
            }).fail(function(data){
                alert(data.responseJSON.message)
            })
        }
            
    </script>
